<%- include('../_layouts/header') %>

<style>
  .edit-container {
    max-width: 600px;
    margin: 40px auto;
    background: #fff;
    padding: 30px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  .edit-container h1 {
    text-align: center;
    margin-bottom: 30px;
  }

  .edit-form-group {
    margin-bottom: 20px;
  }

  .edit-form-group label {
    display: block;
    margin-bottom: 6px;
    font-weight: 600;
  }

  .edit-form-group input,
  .edit-form-group textarea,
  .edit-form-group select {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 6px;
    font-size: 14px;
  }

  .edit-form-group button {
    background: #0088cc;
    color: white;
    padding: 12px 20px;
    border: none;
    border-radius: 6px;
    font-size: 16px;
    cursor: pointer;
    width: 100%;
  }

  .edit-form-group button:hover {
    background: #005f8d;
  }
</style>

<div class="edit-container">
  <h1>Edit Product</h1>
  <form action="/admin/products/edit-product/<%= product._id %>" method="POST" enctype="multipart/form-data">
    
    <div class="edit-form-group">
      <label>Title</label>
      <input type="text" name="title" value="<%= product.title %>" required>
    </div>

    <div class="edit-form-group">
      <label>Description</label>
      <textarea name="desc" rows="3"><%= product.desc %></textarea>
    </div>

    <div class="edit-form-group">
      <label>Category</label>
      <select name="category">
        <% categories.forEach(cat => { %>
          <option value="<%= cat.title %>" <%= cat.title === product.category ? 'selected' : '' %>><%= cat.title %></option>
        <% }) %>
      </select>
    </div>

    <div class="edit-form-group">
      <label>Price</label>
      <input type="number" name="price" value="<%= product.price %>" required>
    </div>

    <div class="edit-form-group">
      <label>Stock</label>
      <input type="number" name="tt" value="<%= product.tt %>" min="0" required>
    </div>

    <div class="form-group">
  <label for="size">Size (ml)</label>
  <input type="number" name="size" class="form-control" value="<%= product.size %>">
</div>


    <div class="edit-form-group">
      <label>Image</label>
      <input type="file" name="image">
    </div>

    <div class="edit-form-group">
      <button type="submit">Update Product</button>
    </div>

  </form>
</div>

<%- include('../_layouts/footer') %>
