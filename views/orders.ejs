<%- include('_layouts/header') %>

<link rel="stylesheet" href="/css/orders.css">


<div class="orders-container">
  <div class="orders-card">
    <h2 class="orders-title">My Orders</h2>

    <% if (orders.length === 0) { %>
      <p class="no-orders">You have not placed any orders yet.</p>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-bordered orders-table">
          <thead class="thead-light">
            <tr>
              <th>Products</th>
              <th>Total Amount</th>
              <th>Paid</th>
              <th>Remaining</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody>
            <% orders.forEach(function(order) { %>
              <tr>
                <td data-label="Products">
                  <% order.items.forEach(function(item) { %>
                    <% if (item.product) { %>
                        <span class="badge bg-light border text-dark me-1 mb-1 d-inline-block">
                          <%= item.product.title %> × <%= item.quantity %>
                        </span>
                      <% } %>
                        
                  <% }) %>
                </td>
                <td data-label="Total Amount">₹<%= order.totalAmount.toFixed(2) %></td>
                <td data-label="Paid">₹<%= order.paidAmount.toFixed(2) %></td>
                <td data-label="Remaining">₹<%= order.remainingAmount.toFixed(2) %></td>
                <td data-label="Date"><%= order.createdAt.toDateString() %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>
</div>

<%- include('_layouts/footer') %>


<style>
  .orders-container {
  max-width: 1000px;
  margin: 40px auto;
  padding: 20px;
  background: #fdfdfd;
  box-shadow: 0 0 15px rgba(0, 0, 0, 0.08);
  border-radius: 12px;
}

.orders-title {
  text-align: center;
  font-size: 2rem;
  font-weight: 600;
  margin-bottom: 30px;
  color: #343a40;
}

.no-orders {
  text-align: center;
  font-style: italic;
  color: #6c757d;
}

.orders-table {
  width: 100%;
  border-collapse: collapse;
  font-size: 0.95rem;
}

.orders-table th, .orders-table td {
  padding: 14px 12px;
  vertical-align: middle;
}

.orders-table th {
  background-color: #f1f1f1;
  font-weight: bold;
}

.orders-table td {
  background-color: #ffffff;
}

.orders-table tr:hover {
  background-color: #f9f9f9;
  transition: 0.2s ease-in-out;
}

/* Subtle border-radius */
.table-responsive {
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 0 3px 10px rgba(0,0,0,0.04);
}

.badge {
  padding: 0.5em 0.8em;
  border-radius: 20px;
  font-size: 0.85rem;
}

@media (max-width: 768px) {
  .orders-container {
    padding: 10px;
    margin: 20px auto;
  }

  .orders-title {
    font-size: 1.5rem;
  }

  .orders-table th, .orders-table td {
    font-size: 0.85rem;
    padding: 10px 8px;
  }

  .badge {
    display: inline-block;
    margin-bottom: 6px;
    font-size: 0.75rem;
    padding: 0.4em 0.6em;
  }
}

@media (max-width: 576px) {
  .orders-table thead {
    display: none;
  }

  .orders-table, .orders-table tbody, .orders-table tr, .orders-table td {
    display: block;
    width: 100%;
  }

  .orders-table tr {
    margin-bottom: 15px;
    border: 1px solid #ddd;
    border-radius: 10px;
    padding: 10px;
  }

  .orders-table td {
    text-align: right;
    padding-left: 50%;
    position: relative;
    background: #fff;
    border-bottom: 1px solid #eee;
  }

  .orders-table td::before {
    content: attr(data-label);
    position: absolute;
    left: 12px;
    top: 50%;
    transform: translateY(-50%);
    font-weight: bold;
    text-align: left;
    color: #444;
  }
}

</style>