<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mansoon</title>
  
  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  
  <!-- Font Awesome Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/header.css">
  
  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/images/product_images/logomo.png">

  <script src="/js/header.js"></script>
  
  <!-- SEO Meta Tags -->
  <meta name="description" content="Mansoon Gruhudyog - Fresh Juices, Sarbats & Cold Drinks made from premium fruits">
  <meta name="keywords" content="juices, sarbat, cold drinks, fruits, Mansoon, beverages">
</head>
<body>

<nav class="navbar navbar-expand-sm navbar-dark">

  

  <div class="container">

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <a class="navbar-brand d-flex align-items-left" href="/home">
      <img src="/images/product_images/logomo.png" alt="Mansoon Logo" width="200" height="100" class="d-inline-block align-top mr-2">
    </a>
    

<!-- Mobile Only Icons -->
<div class="d-block d-sm-none ml-auto mr-2">
  <a href="/home" class="text mr-3" title="Home">
    <i class="fas fa-home"></i>
  </a>
    <a href="/products" class="text mr-3" title="Products">
    <i class="fa-solid fa-list"></i>
  </a>
  <a href="/cart/checkout" class="text mr-3" title="Cart">
    <i class="fas fa-shopping-cart"></i>
  </a>
  <!-- <a href="/users/orders" class="text mr-3" title="My Orders">
    <i class="fas fa-box"></i>
  </a> -->
  <% if (!user) { %>
    <a href="/users/login" class="text" title="Login">
      <i class="fas fa-sign-in-alt"></i>
    </a>
  <% } else { %>
    <a href="/users/logout" class="text" title="Logout">
      <i class="fas fa-sign-in-alt"></i>
    </a>
  <% } %>
</div>


    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/home">
            <i class="fas fa-home mr-1"></i>Home
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/products">
            <i class="fa-brands fa-product-hunt mr-1"></i>Products
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/coming-soon">
            <i class="fa-solid fa-circle-info mr-1"></i>About us
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/cart/checkout">
            <i class="fas fa-shopping-cart mr-1"></i>Cart
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/users/orders">
            <i class="fa-solid fa-box mr-1"></i>My Orders
          </a>
        </li>

        <% if(user && user.admin){ %>
          <li class="nav-item">
          <a class="nav-link" href="/admin/dashboard">
            <i class="fa-solid fa-user-tie mr-1"></i>Admin Dashboard
          </a>
        </li>
        <%} %>

        <% if (!user) { %>
          <li class="nav-item">
            <a class="nav-link" href="/users/login">
              <i class="fas fa-sign-in-alt mr-1"></i>Login
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/register">
              <i class="fas fa-user-plus mr-1"></i>Register
            </a>
          </li>
        <% } else { %>
          <li class="nav-item">
            <a class="nav-link" href="/users/logout">
              <i class="fas fa-sign-out-alt mr-1"></i>Logout
            </a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>



<% if (success && success.length > 0) { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= success[0] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
<% } %>

<% if (danger && danger.length > 0) { %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%= danger[0] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
<% } %>

<% if (info && info.length > 0) { %>
  <div class="alert alert-info alert-dismissible fade show" role="alert">
    <%= info[0] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
<% } %>





<div class="container mt-4">

  <script>
  setTimeout(() => {
    const alerts = document.querySelectorAll('.alert');
    alerts.forEach(alert => {
      const bsAlert = new bootstrap.Alert(alert);
      bsAlert.close();
    });
  }, 4000); // auto close in 4 seconds
</script>

